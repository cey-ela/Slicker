<ObitConfirmation>
    size_hint: None, None
    width: 450
    height: 200
    auto_dismiss: False
    title: ""

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text:
                    "ARE YOU SURE THEY ARE DEAD?"

            BoxLayout:
                size_hint_y: 0.4
                Button:
                    text: "YES"
                    on_release: root.do_obit()
                Button:
                    text: "NO"
                    on_release: root.dont_obit()
                    on_release: app.not_conf()
            Label:
                size_hint_y: 0.2


