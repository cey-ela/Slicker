# https://stackoverflow.com/questions/48438074/kivy-touch-the-label-to-check-the-checkbox/48443383


<MCQLabel@ButtonBehavior+Label>:
    text_size: self.size
    valign: 'center'

<MCQLabelCheckBox@BoxLayout>:
    BoxLayout
        size_hint_x: .4
        CheckBox:
            size_hint_x: .05
            id: cb
            on_active: app.do_not_show_maestro_reminder()
        MCQLabel:
            size_hint_x: .9
            on_press: cb._do_press()
            text: "Do not display message for the remainder of this session"
    Label:
        size_hint_x: .6


